{
  "name": "homebridge-unifi-protect-motion-trigger",
  "version": "1.0.5",
  "description": "Homebridge plugin for UniFi Protect motion sensors and camera settings without video streaming",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "config.schema.json"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "test": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "homebridge-plugin",
    "unifi",
    "unifi-protect",
    "motion",
    "camera",
    "ubiquiti"
  ],
  "author": "Keith Thompson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keiththompson/homebridge-unifi-protect-motion-trigger.git"
  },
  "bugs": {
    "url": "https://github.com/keiththompson/homebridge-unifi-protect-motion-trigger/issues"
  },
  "engines": {
    "node": "^20.18.0 || ^22.10.0 || ^24.0.0",
    "homebridge": "^1.8.0 || ^2.0.0-beta.0"
  },
  "dependencies": {
    "unifi-protect": "^4.27.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "homebridge": "^1.8.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "homebridge": "^1.8.0 || ^2.0.0-beta.0"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --check"
    ],
    "*.{js,ts}": [
      "eslint"
    ]
  },
  "homepage": "https://github.com/keiththompson/homebridge-unifi-protect-motion-trigger#readme"
}
